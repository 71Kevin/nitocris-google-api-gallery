{
  "env": {
    "node": true,
    "es6": true
  },
  "extends": ["eslint:recommended", "plugin:ejs/recommended"],
  "parserOptions": {
    "ecmaVersion": 2021
  },
  "plugins": ["ejs"],
  "rules": {
    "semi": ["error", "always"],
    "quotes": ["error", "single"],
    "no-console": "off",
    "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
    "ejs/no-multiple-outputs": "error",
    "ejs/no-async-render": "error",
    "ejs/newline-between-statement": "error"
  }
}
